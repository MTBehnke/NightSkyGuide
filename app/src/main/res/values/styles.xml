<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/primary_dark_material_dark</item>
        <!--<item name="android:windowFullscreen">true</item>  -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DSObjectLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="DSObjectTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="LocCategoryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textColor">#FF80CBC4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">6dp</item>-->
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
    </style>

    <style name="LocLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="LocTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
    </style>

