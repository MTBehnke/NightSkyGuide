<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_latitude"
        android:inputType="number|numberDecimal"
        android:key="edit_text_pref_lat"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:persistent="true"
        android:title="Latitude (dd.dddd):" />

    <EditTextPreference
        android:defaultValue="@string/default_longitude"
        android:inputType="number|numberDecimal|numberSigned"
        android:key="edit_text_pref_long"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:persistent="true"
        android:title="Longitude +E/-W (dd.dddd):" />

</PreferenceScreen>